<?xml version="1.0"?>

<robot name="juggling_platform_3d" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find balancing_platform_3d_description)/urdf/include/const.xacro"/>
    <xacro:include filename="$(find balancing_platform_3d_description)/urdf/include/materials.xacro"/>

    <link name="world"/>

    <link name="first_motor">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://balancing_platform_3d_description/meshes/motor.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="${motor_com_x} ${motor_com_y} ${motor_com_z}"/>
            <mass value="${motor_mass}"/>
            <inertia
                ixx="${motor_ixx}" ixy="${motor_ixy}" ixz="${motor_ixz}"
                iyy="${motor_iyy}" iyz="${motor_iyz}"
                izz="${motor_izz}"/>  
        </inertial>
    </link>

    <joint name="first_base_joint" type="fixed">
        <origin rpy="0 0 ${pi/4}" xyz="-0.055343798 -0.055343798 0"/>
        <parent link="world"/>
        <child link="first_motor"/>
    </joint>

    <link name="first_low_arm">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.04"/>
            <geometry>
                <mesh filename="package://balancing_platform_3d_description/meshes/arm.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="${arm_com_x} ${arm_com_y} ${arm_com_z}"/>
            <mass value="${arm_mass}"/>
            <inertia
                ixx="${arm_ixx}" ixy="${arm_ixy}" ixz="${arm_ixz}"
                iyy="${arm_iyy}" iyz="${arm_iyz}"
                izz="${arm_izz}"/>  
        </inertial>
    </link>

    <joint name="first_motor_joint" type="revolute">
        <origin rpy="0 ${-pi/3} 0" xyz="0 0 0.014"/>
        <parent link="first_motor"/>
        <child link="first_low_arm"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${motor_torque_max}" velocity="${motor_velocity_max}" lower="${motor_position_min}" upper="${motor_position_max}"/>
    </joint>

    <link name="first_top_arm">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.04"/>
            <geometry>
                <mesh filename="package://balancing_platform_3d_description/meshes/arm_3d.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="${arm_com_x} ${arm_com_y} ${arm_com_z}"/>
            <mass value="${arm_mass}"/>
            <inertia
                ixx="${arm_ixx}" ixy="${arm_ixy}" ixz="${arm_ixz}"
                iyy="${arm_iyy}" iyz="${arm_iyz}"
                izz="${arm_izz}"/>  
        </inertial>
    </link>

    <joint name="first_arm_joint" type="revolute">
        <origin rpy="0 ${2*pi/3} 0" xyz="0 0 0.08"/>
        <parent link="first_low_arm"/>
        <child link="first_top_arm"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${arm_torque_max}" velocity="${arm_velocity_max}" lower="${arm_position_min}" upper="${arm_position_max}"/>
    </joint>

    <link name="platform">
        <visual>
            <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://balancing_platform_3d_description/meshes/platform_3d.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
            <geometry>
                <box size="${platform_length} ${platform_width} ${platform_height}"/>
            </geometry>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="${platform_com_x} ${platform_com_y} ${platform_com_z}"/>
            <mass value="${platform_mass}"/>
            <inertia
                ixx="${platform_ixx}" ixy="${platform_ixy}" ixz="${platform_ixz}"
                iyy="${platform_iyy}" iyz="${platform_iyz}"
                izz="${platform_izz}"/>  
        </inertial>
    </link>

    <!-- Links intermedios -->
    <link name="first_top_arm_x_link"/>
    <link name="first_top_arm_y_link"/>
    <link name="first_anchor_link"/>

    <joint name="first_platform_joint_x" type="revolute">
        <origin rpy="0 0 0" xyz="0 0 0.078"/>
        <parent link="first_top_arm"/>
        <child link="first_top_arm_x_link"/>
        <axis xyz="1 0 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${platform_torque_max}" velocity="${platform_velocity_max}" lower="${platform_position_min}" upper="${platform_position_max}"/>
    </joint>

    <joint name="first_platform_joint_y" type="revolute">
        <origin rpy="0 -${pi/3} 0" xyz="0 0 0"/>
        <parent link="first_top_arm_x_link"/>
        <child link="first_top_arm_y_link"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${platform_torque_max}" velocity="${platform_velocity_max}" lower="${platform_position_min}" upper="${platform_position_max}"/>
    </joint>

    <joint name="first_platform_joint_z" type="revolute">
        <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
        <parent link="first_top_arm_y_link"/>
        <child link="first_anchor_link"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${platform_torque_max}" velocity="${platform_velocity_max}" lower="${platform_position_min}" upper="${platform_position_max}"/>
    </joint>

    <joint name="first_anchor_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 -0.08 0.003"/>
        <parent link="first_anchor_link"/>
        <child link="platform"/>
    </joint>

    <!-- Second arm -->
    <link name="second_top_arm">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.038"/>
            <geometry>
                <mesh filename="package://balancing_platform_3d_description/meshes/arm_3d.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="${arm_com_x} ${arm_com_y} ${arm_com_z}"/>
            <mass value="${arm_mass}"/>
            <inertia
                ixx="${arm_ixx}" ixy="${arm_ixy}" ixz="${arm_ixz}"
                iyy="${arm_iyy}" iyz="${arm_iyz}"
                izz="${arm_izz}"/>  
        </inertial>
    </link>

    <!-- Links intermedios -->
    <link name="second_top_arm_x_link"/>
    <link name="second_top_arm_y_link"/>
    <link name="second_anchor_link"/>

    <joint name="second_anchor_joint" type="fixed">
        <origin rpy="0 0 ${2*pi/3}" xyz="-0.069282032 -0.04 0"/>
        <parent link="platform"/>
        <child link="second_anchor_link"/>
    </joint>

    <joint name="second_platform_joint_z" type="revolute">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="second_anchor_link"/>
        <child link="second_top_arm_y_link"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${platform_torque_max}" velocity="${platform_velocity_max}" lower="${platform_position_min}" upper="${platform_position_max}"/>
    </joint>

    <joint name="second_platform_joint_y" type="revolute">
        <origin xyz="0 0 0" rpy="0 0 ${-pi/2}"/>
        <parent link="second_top_arm_y_link"/>
        <child link="second_top_arm_x_link"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${platform_torque_max}" velocity="${platform_velocity_max}" 
                lower="${platform_position_min}" upper="${platform_position_max}"/>
    </joint>

    <joint name="second_platform_joint_x" type="revolute">
        <origin xyz="0 0 0" rpy="0 ${pi/3} 0"/>
        <parent link="second_top_arm_x_link"/>
        <child link="second_top_arm"/>
        <axis xyz="1 0 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${platform_torque_max}" velocity="${platform_velocity_max}" 
                lower="${platform_position_min}" upper="${platform_position_max}"/>
    </joint>

    <link name="second_low_arm">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.04"/>
            <geometry>
                <mesh filename="package://balancing_platform_3d_description/meshes/arm.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="${arm_com_x} ${arm_com_y} ${arm_com_z}"/>
            <mass value="${arm_mass}"/>
            <inertia
                ixx="${arm_ixx}" ixy="${arm_ixy}" ixz="${arm_ixz}"
                iyy="${arm_iyy}" iyz="${arm_iyz}"
                izz="${arm_izz}"/>  
        </inertial>
    </link>

    <joint name="second_arm_joint" type="revolute">
        <origin rpy="0 ${-2*pi/3} 0" xyz="0 0 -0.078"/>
        <parent link="second_top_arm"/>
        <child link="second_low_arm"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${arm_torque_max}" velocity="${arm_velocity_max}" lower="${arm_position_min}" upper="${arm_position_max}"/>
    </joint>

    <link name="second_motor">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.014"/>
            <geometry>
                <mesh filename="package://balancing_platform_3d_description/meshes/motor.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="${motor_com_x} ${motor_com_y} ${motor_com_z}"/>
            <mass value="${motor_mass}"/>
            <inertia
                ixx="${motor_ixx}" ixy="${motor_ixy}" ixz="${motor_ixz}"
                iyy="${motor_iyy}" iyz="${motor_iyz}"
                izz="${motor_izz}"/>  
        </inertial>
    </link>

    <joint name="second_motor_joint" type="revolute">
        <origin rpy="0 ${pi/3} 0" xyz="0 0 -0.08"/>
        <parent link="second_low_arm"/>
        <child link="second_motor"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${motor_torque_max}" velocity="${motor_velocity_max}" lower="${motor_position_min}" upper="${motor_position_max}"/>
    </joint>

    <!-- Third arm -->
    <link name="third_top_arm">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.038"/>
            <geometry>
                <mesh filename="package://balancing_platform_3d_description/meshes/arm_3d.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="${arm_com_x} ${arm_com_y} ${arm_com_z}"/>
            <mass value="${arm_mass}"/>
            <inertia
                ixx="${arm_ixx}" ixy="${arm_ixy}" ixz="${arm_ixz}"
                iyy="${arm_iyy}" iyz="${arm_iyz}"
                izz="${arm_izz}"/>  
        </inertial>
    </link>

    <!-- Links intermedios -->
    <link name="third_top_arm_x_link"/>
    <link name="third_top_arm_y_link"/>
    <link name="third_anchor_link"/>

    <joint name="third_anchor_joint" type="fixed">
        <origin rpy="0 0 ${-2*pi/3}" xyz="0.069282032 -0.04 0"/>
        <parent link="platform"/>
        <child link="third_anchor_link"/>
    </joint>

    <joint name="third_platform_joint_z" type="revolute">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="third_anchor_link"/>
        <child link="third_top_arm_y_link"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${platform_torque_max}" velocity="${platform_velocity_max}" lower="${platform_position_min}" upper="${platform_position_max}"/>
    </joint>

    <joint name="third_platform_joint_y" type="revolute">
        <origin xyz="0 0 0" rpy="0 0 ${-pi/2}"/>
        <parent link="third_top_arm_y_link"/>
        <child link="third_top_arm_x_link"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${platform_torque_max}" velocity="${platform_velocity_max}"
                lower="${platform_position_min}" upper="${platform_position_max}"/>
    </joint>

    <joint name="third_platform_joint_x" type="revolute">
        <origin xyz="0 0 0" rpy="0 ${pi/3} 0"/>
        <parent link="third_top_arm_x_link"/>
        <child link="third_top_arm"/>
        <axis xyz="1 0 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${platform_torque_max}" velocity="${platform_velocity_max}"
                lower="${platform_position_min}" upper="${platform_position_max}"/>
    </joint>

    <link name="third_low_arm">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.04"/>
            <geometry>
                <mesh filename="package://balancing_platform_3d_description/meshes/arm.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="${arm_com_x} ${arm_com_y} ${arm_com_z}"/>
            <mass value="${arm_mass}"/>
            <inertia
                ixx="${arm_ixx}" ixy="${arm_ixy}" ixz="${arm_ixz}"
                iyy="${arm_iyy}" iyz="${arm_iyz}"
                izz="${arm_izz}"/>  
        </inertial>
    </link>

    <joint name="third_arm_joint" type="revolute">
        <origin rpy="0 ${-2*pi/3} 0" xyz="0 0 -0.078"/>
        <parent link="third_top_arm"/>
        <child link="third_low_arm"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${arm_torque_max}" velocity="${arm_velocity_max}" lower="${arm_position_min}" upper="${arm_position_max}"/>
    </joint>
    
    <link name="third_motor">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.014"/>
            <geometry>
                <mesh filename="package://balancing_platform_3d_description/meshes/motor.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <inertial>
            <origin rpy="0 0 0" xyz="${motor_com_x} ${motor_com_y} ${motor_com_z}"/>
            <mass value="${motor_mass}"/>
            <inertia
                ixx="${motor_ixx}" ixy="${motor_ixy}" ixz="${motor_ixz}"
                iyy="${motor_iyy}" iyz="${motor_iyz}"
                izz="${motor_izz}"/>  
        </inertial>
    </link>

    <joint name="third_motor_joint" type="revolute">
        <origin rpy="0 ${pi/3} 0" xyz="0 0 -0.08"/>
        <parent link="third_low_arm"/>
        <child link="third_motor"/>
        <axis xyz="0 1 0"/>
        <dynamics damping="${damping}" friction="${friction}"/>
        <limit effort="${motor_torque_max}" velocity="${motor_velocity_max}" lower="${motor_position_min}" upper="${motor_position_max}"/>
    </joint>

</robot>